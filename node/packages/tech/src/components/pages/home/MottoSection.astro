        [
          "　",
          "　ｓ",
          "　せ",
          "　せｋ",
          "　せｋｋ",
          "　せっけ",
          "　せっけい",
          "　せっけいｄ",
          "　せっけいで",
          "　設計で",
          "　設計でｈ",
          "　設計でひ",
          "　設計でひｔ",
          "　設計でひと",
          "　設計でひとを",
          "　設計で人を",
          "　設計で人をｈ",
          "　設計で人をは",
          "　設計で人をはｐ",
          "　設計で人をはっぴ",
          "　設計で人をはっぴー",
          "　設計で人をはっぴーｎ",
          "　設計で人をはっぴーに",
          "　設計で人をハッピーに",
          "　設計で人をハッピーにｓ",
          "　設計で人をハッピーにす",
